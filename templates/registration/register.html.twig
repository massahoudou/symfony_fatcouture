{% extends 'adminbase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Nouveau utilisateur</h1>
        <a href="{{ path('app_register.list') }}" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm"><i class="fa fa-list"></i> <span>List des utilisateurs</span> </a>
    </div>
    <div>
    <h1></h1>

        <div class="jumbotron">
            <div class="container col-md">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.username,{'label': 'Identifiant'}) }}
                {{ form_row(registrationForm.plainPassword,{'label':'Mot de  passe '}) }}
                {{ form_row(registrationForm.confirm_password , {'label' : 'Confimer le mot de passe '}) }}

                <button type="submit" class="btn btn-primary" > <i class="fa fa-save"></i> <span>

                    </span>Valider</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>

    </div>
</div>
{% endblock %}
