{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="jumbotron" ">
    <div class="container col-md-3 ">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
            </div>
        {% endif %}
        <div class="card mt-5 ">
            <div class="card-title alert alert-secondary h5 text-center">Connexion</div>
            <div class="card-body">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                            Identifiant
                            <input class="form-control" type="text" name="_username" placeholder="Nom d'utilisateur..." required>
                    </div>
                    <div class="form-group">
                            Mot de passe
                            <input class="form-control" type="password" name="_password" placeholder="Mot de passe... " required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-danger" type="submit">Valider</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
{% endblock %}
